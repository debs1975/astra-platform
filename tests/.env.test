# Test Configuration for Astra Platform
# This file contains test configuration and environment variables

# Test Execution Configuration
export RUN_UNIT_TESTS=true
export RUN_INTEGRATION_TESTS=true
export RUN_E2E_TESTS=true
export PARALLEL_TESTS=false
export COVERAGE_ENABLED=false
export STOP_ON_FAILURE=false

# Test Environment Configuration
export TEST_TIMEOUT=300
export TEST_RETRY_COUNT=3
export TEST_RETRY_DELAY=5

# Azure Test Configuration
export AZURE_LOCATION=centralindia
export AZURE_SUBSCRIPTION_ID=${AZURE_SUBSCRIPTION_ID:-""}
export AZURE_TENANT_ID=${AZURE_TENANT_ID:-""}
export AZURE_CLIENT_ID=${AZURE_CLIENT_ID:-""}
export AZURE_CLIENT_SECRET=${AZURE_CLIENT_SECRET:-""}

# Resource Naming Configuration
export RESOURCE_PREFIX=astra
export TEST_RESOURCE_PREFIX=astra-test
export CLEANUP_RESOURCES=true

# Kubernetes Configuration
export KUBE_CONTEXT=${KUBE_CONTEXT:-"minikube"}
export KUBE_NAMESPACE=crossplane-system
export CROSSPLANE_NAMESPACE=crossplane-system

# Test Data Configuration
export TEST_DATA_DIR=tests/data
export TEST_RESULTS_DIR=tests/results
export TEST_LOGS_DIR=tests/logs
export TEST_REPORTS_DIR=tests/reports

# XRD Test Configuration
export XRD_VALIDATION_ENABLED=true
export COMPOSITION_VALIDATION_ENABLED=true
export CLAIM_VALIDATION_ENABLED=true

# Integration Test Configuration
export AZURE_INTEGRATION_TESTS=true
export CROSSPLANE_INTEGRATION_TESTS=true
export NETWORKING_TESTS=true
export SECURITY_TESTS=true

# E2E Test Configuration
export E2E_DEPLOY_TIMEOUT=1800
export E2E_CLEANUP_TIMEOUT=600
export E2E_VALIDATE_APPLICATIONS=true
export E2E_VALIDATE_SCALING=true
export E2E_VALIDATE_NETWORKING=true

# Logging Configuration
export LOG_LEVEL=INFO
export VERBOSE_LOGGING=false
export DEBUG_MODE=false

# Performance Test Configuration
export LOAD_TEST_ENABLED=false
export PERFORMANCE_BASELINE_FILE=tests/data/performance-baseline.json
export PERFORMANCE_THRESHOLD_CPU=80
export PERFORMANCE_THRESHOLD_MEMORY=80

# Security Test Configuration
export SECURITY_SCAN_ENABLED=true
export VULNERABILITY_SCAN_ENABLED=false
export RBAC_VALIDATION_ENABLED=true

# Platform Test Configuration
export PLATFORM_HEALTH_CHECKS=true
export COMPONENT_HEALTH_CHECKS=true
export DEPENDENCY_CHECKS=true

# Test Reporting Configuration
export GENERATE_HTML_REPORTS=false
export GENERATE_JSON_REPORTS=true
export GENERATE_JUNIT_REPORTS=false
export REPORT_RETENTION_DAYS=30

# Development Test Configuration
export DEV_MODE_TESTS=false
export MOCK_AZURE_SERVICES=false
export USE_TEST_DOUBLES=false